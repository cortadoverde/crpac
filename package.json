{
  "name": "copyrelativepathandcontent",
  "displayName": "copyRelativePathAndContent",
  "description": "",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.copyPathAndContent",
        "title": "Copiar ruta relativa y contenido"
      },
      {
        "command": "extension.copyDirectoryTree",
        "title": "Copiar √Årbol de Directorio"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyPathAndContent",
          "when": "resourceLangId != ''",
          "group": "navigation@5"
        },
        {
          "command": "extension.copyDirectoryTree",
          "when": "explorerResourceIsFolder", 
          "group": "navigation@6"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cortadoverde/crpac.git"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "is-binary": "^0.1.0"
  }
}
