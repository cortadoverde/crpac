{
  "name": "copyrelativepathandcontent",
  "displayName": "Copy Path & Content (with AI)",
  "description": "Copia la ruta relativa y el contenido de archivos/directorios. Opcionalmente, analiza el contenido con IA.",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Copy Path & Content (with AI)",
      "properties": {
        "copyRelativePathAndContent.googleAiApiKey": {
          "type": "string",
          "default": "",
          "description": "Tu API Key de Google AI (Gemini) para usar las funciones de análisis de IA.",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "extension.copyOrAnalyzeContent",
        "title": "Copiar Contenido (o Analizar con IA)..."
      },
      {
        "command": "extension.copyDirectoryTree",
        "title": "Copiar Árbol de Directorio"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyOrAnalyzeContent",
          "when": "resourceLangId != ''",
          "group": "navigation@5"
        },
        {
          "command": "extension.copyDirectoryTree",
          "when": "explorerResourceIsFolder",
          "group": "navigation@6"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cortadoverde/crpac.git"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.15.2",
    "genkit": "^1.15.2",
    "ts-node": "^10.9.2"
  }
}
